<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add66b"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tcc.lucca.scoutup.PerfilFragmentActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_perfil_fragment">

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="159dp"
        android:layout_height="158dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="111dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btnlogout"
        android:text="Logout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/imgPerfil"
        app:layout_constraintRight_toRightOf="@+id/imgPerfil"
        app:layout_constraintTop_toBottomOf="@+id/btnEditarPerfil" />

    <Button
        android:id="@+id/btnEditarPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btneditarperfil"
        android:text="Editar Perfil"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="@+id/imgPerfil"
        app:layout_constraintRight_toRightOf="@+id/imgPerfil"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfil" />

    <TextView
        android:id="@+id/txAmigos"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:text="Amigos"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/imgAmigos"
        app:layout_constraintTop_toTopOf="@+id/imgAmigos" />

    <ImageView
        android:id="@+id/imgAmigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imgPerfil"
        app:layout_constraintTop_toBottomOf="@+id/btnLogout"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/tvInformacoes"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        tools:layout_editor_absoluteY="111dp" />

    <ImageView
        android:id="@+id/imgEspecialidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/tvEspecialidades"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        tools:layout_editor_absoluteY="381dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="#846549"
        app:layout_constraintBottom_toTopOf="@+id/imgPerfil"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="142dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:text="PERFIL"
            android:textColor="#e7cfa1"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/listViewAmigos"
        android:layout_width="175dp"
        android:layout_height="163dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/listviewstyle"
        app:layout_constraintLeft_toLeftOf="@+id/imgPerfil"
        app:layout_constraintTop_toBottomOf="@+id/txAmigos" />

    <ListView
        android:id="@+id/listViewEspecialidades"
        android:layout_width="175dp"
        android:layout_height="163dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/listviewstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listViewAmigos"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvInformacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="Infomações"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/lvInfo"
        app:layout_constraintTop_toTopOf="@+id/imgPerfil" />

    <TextView
        android:id="@+id/tvEspecialidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Especialidades"
        app:layout_constraintRight_toRightOf="@+id/listViewEspecialidades"
        tools:layout_editor_absoluteY="389dp" />

    <ListView
        android:id="@+id/lvInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/listviewstyle"
        app:layout_constraintBottom_toTopOf="@+id/imgEspecialidade"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/listViewEspecialidades"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInformacoes"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
